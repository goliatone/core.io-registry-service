<header>
    <div class="row flex-row">
        <div class="col-xs-6">
            <h1><%= capitalize(entityName)%></h1>
        </div>
        <div class="col-xs-6">
            <button id="add_record"
                    data-action="create"
                    class="js-add-record btn btn-primary pull-right" type="button">
                Add <%= capitalize(entityName)%>
            </button>
        </div>
    </div>
</header>

<% if(records.length === 0){ %>
<div class="row">
    <div class="well">
        <p class="lead">
            There are no records to show here yet.
        </p>
    </div>
</div>
<% } else { %>
    <%- include('_grid.ejs') %>
<% } %>
